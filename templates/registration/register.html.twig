{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block importmap %}
	{{ importmap('checkregister') }}
{% endblock %}

{% block body %}
	<div class="font-[sans-serif] bg-zinc-100 max-w-4xl flex items-center mx-auto md:h-screen p-4">

		<div class="grid md:grid-cols-3 items-center shadow-[0_2px_10px_-3px_rgba(6,81,237,0.3)] rounded-xl overflow-hidden">
			<div class="max-md:order-1 flex flex-col justify-center space-y-16 max-md:mt-16 min-h-full bg-gradient-to-r from-cyan-900 to-cyan-700 lg:px-8 px-4 py-4">
				<div>
					<h6 class="text-white text-sm font-semibold">Créer votre compte</h6>
					<p class="text-[12px] italic text-gray-300 mt-2 leading-relaxed">Bienvenue sur la page d'inscription . Lancez-vous pour sa création...</p>
					<ul>
						<li id="allowEmail" class="text-[12px] italic mt-4 ml-3 leading-relaxed"></li>
						<li id="allowPassword" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
						<li id="allowAgreeTerms" class="text-[12px] italic mt-1 ml-3 leading-relaxed"></li>
					</ul>
				</div>
				<div>
					<h6 class="text-white text-sm font-semibold">Enregistrement sécurisé</h6>
					<p id="message" class="text-[12px] italic text-gray-300 mt-2 leading-relaxed"></p>
					<div class="ml-4">
						<ul id='password_criteria'>
							<li id="password_length_criteria" data-password-criteria>12 caractères au total</li>
							<li id="password_special_character_criteria" data-password-criteria>1 caractère spécial</li>
							<li id="password_uppercase_criteria" data-password-criteria>1 lettre majuscule</li>
							<li id="password_number_criteria" data-password-criteria>1 chiffre au moins</li>
							<li id="password_lowercase_criteria" data-password-criteria>1 lettre minuscule</li>
						</ul>
					</div>
				</div>
			</div>
			{{ form_start(registrationForm, {attr: {
              novalidate: "novalidate",
              class: "bg-white md:col-span-2 w-full py-6 px-6 sm:px-16",
              id: "registration_form"
            }
          })
        }}
			<div class="mb-6">
				<h3 class=" text-2xl font-bold text-center text-cyan-600">Inscription</h3>
			</div>

			<div class="space-y-6">
				<div>
					<div class="relative flex items-center">
						{{ form_widget(registrationForm.email) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.email) }}
						</div>
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="w-4 h-4 absolute right-4 cursor-pointer">
							<path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"/>
							<path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"/>
						</svg>

					</div>
				</div>


				<div>
					<div class="relative flex items-center">
						{{ form_widget(registrationForm.plainPassword) }}
						<div class="text-sm text-red-700">
							{{ form_errors(registrationForm.plainPassword) }}
						</div>
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="w-4 h-4 absolute right-4 cursor-pointer">
							<path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
							<path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd"/>
						</svg>

					</div>
				</div>


				<div class="flex items-center">
					{{ form_widget(registrationForm.agreeTerms) }}
					{{ form_label(registrationForm.agreeTerms) }}
					{{ form_errors(registrationForm.agreeTerms) }}
				</div>
			</div>

			<div class="!mt-12">
				<button type="submit" id="registration_form_submit" class="w-full py-3 px-4 tracking-wider text-sm rounded-md text-white bg-cyan-600 hover:bg-cyan-800 focus:outline-none">
					Créer votre compte
				</button>
			</div>
			<p class="text-gray-800 text-sm mt-6 text-center">d&eacute;jà inscrit ?
				<a href="{{ path('app_login') }}" class="text-cyan-600 font-semibold hover:underline ml-1">Connexion</a>
			</p>
			{{ form_end(registrationForm) }}

		</div>
	</div>
{% endblock %}
